<!-- Newsletter section start here -->
<section class="ic-newsletter">
    <div class="container">
        <div class="row ic-newsletter-wrapper">
            <div class="col-lg-3 col-md-1 col-sm-12"></div>
            <div class="col-lg-6 col-md-10 col-sm-12">
                <div class="ic-newsletter-inner">
                    {% if section.settings.newsletter_title != blank%}
                        <h2 class="ic-newsletter-title">{{ section.settings.newsletter_title }}</h2>
                    {% endif %}
                    <form action="#" method="post" name="ic-newsletter-form">
                        <div class="ic-newsletter-form">
                            <input type="email" value="" name="EMAIL" class="ic-form-controll" placeholder="Enter Email Address" required="">
                            <button class="ic-submit" type="submit"><i class="icofont-paper-plane"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3 col-md-1 col-sm-12"></div>
        </div>
    </div>
</section>
<!-- Newsletter section end here -->


{% schema %}
    {
        "name": "Newsletter",
        "settings": [
            {
                "type": "text",
                "id": "newsletter_title",
                "label": "Newsletter Title"
            }
        ]
    }
{% endschema %}
