<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <!-- meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="bootstrap 4, premium, multipurpose, ecommerce, html5, css" />
    <meta name="description" content="E-Commerce HTML Template" />
    <meta name="author" content="https://itclanbd.com" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% if settings.favicon != blank %}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height:32 }}">
    {% endif %}

    <!-- all min css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"/>
    <link rel="stylesheet" href="https://unpkg.com/@icon/icofont/icofont.css">
    <!-- plugin css -->
    {{ 'plugin.css' | asset_url | stylesheet_tag }}
    <!-- style css -->
    {{ 'style.css' | asset_url | stylesheet_tag }}

    {% if template == 'index' %}
      <title>{{ shop.name }} | {{ page_title }}</title>
    {% elsif template == '404' %}
      <title>Page Not Found | {{ shop.name }}</title>
    {% else %}
      <title>{{ page_title }} | {{ shop.name }}</title>
    {% endif %}

    {{ content_for_header }}


  </head>
  <body aria-hidden="true">

    {% section 'header' %}

    {{ content_for_layout }}

    {% section 'footer' %}

    {{ 'plugin.js' | asset_url | script_tag }}
    {{ 'custom.js' | asset_url | script_tag }}
  </body>
</html>