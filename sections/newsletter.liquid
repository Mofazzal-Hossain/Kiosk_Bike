<!-- Newsletter section start here -->
<section class="ic-newsletter">
    <div class="container">
        <div class="row ic-newsletter-wrapper justify-content-center" style="background-image: url({{ section.settings.newsletter_bg_image | img_url: '1920x' }})">
            <div class="col-lg-6 col-md-10 col-sm-12">
                <div class="ic-newsletter-inner">
                    {% if section.settings.newsletter_title != blank%}
                        <h2 class="ic-newsletter-title">{{ section.settings.newsletter_title }}</h2>
                    {% endif %}
             
                    {% form 'customer' %}
                        {% if form.posted_successfully? %}
                            <h3>{{ form.posted_successfully }}</h3>
                        {% endif %}
                        {{ form.errors | default_errors }}
                        <div class="ic-newsletter-form">
                            <input type="email" value="" name="contact[email]" class="ic-form-controll" placeholder="Enter Email Address" required="">
                            <button class="ic-submit" type="submit"><i class="icofont icofont-paper-plane"></i></button>
                        </div>
                    {% endform %}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Newsletter section end here -->


{% schema %}
   {
    "name": "Newsletter",
    "class": "newsletter",
    "settings": [
      {
        "type": "text",
        "id": "newsletter_title",
        "label": "Newsletter Title",
        "default": "Never Miss Our Latest Updates"
      },
      {
        "type": "image_picker",
        "id": "newsletter_bg_image",
        "label": "Newsletter Background Image"
      }
    ],
    "presets": [
        {
            "name": "Newsletter"
        }
    ]
  }
{% endschema %}
